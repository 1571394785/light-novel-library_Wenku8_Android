<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/default_text_color_black</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="reader_seeker" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/default_white</item>
    </style>

    <style name="CustomMaterialAlertDialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="colorSurface">@color/default_white</item>
        <item name="colorOnSurface">@color/myTextPrimaryColor</item> 
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="android:backgroundDimAmount">0.5</item>

        <item name="materialAlertDialogTitleTextStyle">@style/CustomMaterialAlertDialogTitleText</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogNegativeButtonStyle</item>
    </style>

    <style name="CustomMaterialAlertDialogTitleText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/dlgTitleColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogPositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dlgPositiveButtonColor</item>
        <item name="rippleColor">@color/dlgPositiveButtonColor</item> 
    </style>

    <style name="DialogNegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dlgNegativeButtonColor</item>
        <item name="rippleColor">@color/dlgNegativeButtonColor</item>
    </style>

</resources>
